<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.Light.NoActionBar">

    </style>

    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp" />

    <style name="NavHome" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/onSurface</item>
        <item name="itemIconTint">@color/colorText</item>
        <item name="itemTextColor">@color/colorText</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemPaddingTop">14dp</item>
        <item name="itemPaddingBottom">0dp</item>
        <item name="itemActiveIndicatorStyle">@style/ActiveIndicator</item>
    </style>

    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">64dp</item>
        <item name="android:height">34dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="shapeAppearance">@style/RoundedActive</item>
        <item name="android:color">@color/item</item>
    </style>

    <style name="RoundedActive" parent="ShapeAppearance.M3.Sys.Shape.Corner.Full">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSize">20%</item>
    </style>
</resources>